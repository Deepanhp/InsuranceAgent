<div class="container py-5">
  <div class="row mb-5">
    <div class="col-lg-6 animate__animated animate__fadeInLeft">
      <h1 class="display-4 mb-4">Contact Me</h1>
      <p class="lead mb-4">Get in touch for a free consultation about your insurance needs.</p>
      
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      
      <div class="contact-info mb-5">
        <div class="d-flex align-items-center mb-4">
          <div class="flex-shrink-0">
            <div class="bg-primary p-3 rounded-circle text-white">
              <i class="fas fa-phone"></i>
            </div>
          </div>
          <div class="ms-3">
            <h3 class="h5 mb-1">Phone</h3>
            <p class="mb-0">+91 9688692294</p>
          </div>
        </div>
        
        <div class="d-flex align-items-center mb-4">
          <div class="flex-shrink-0">
            <div class="bg-primary p-3 rounded-circle text-white">
              <i class="fas fa-envelope"></i>
            </div>
          </div>
          <div class="ms-3">
            <h3 class="h5 mb-1">Email</h3>
            <p class="mb-0">saranyamitra94@gmail.com</p>
          </div>
        </div>
        
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <div class="bg-primary p-3 rounded-circle text-white">
              <i class="fas fa-map-marker-alt"></i>
            </div>
          </div>
          <div class="ms-3">
            <h3 class="h5 mb-1">Office</h3>
            <p class="mb-0">Coimbatore, Tamil Nadu</p>
          </div>
        </div>
      </div>
      
      <div class="social-links">
        <h3 class="h5 mb-3">Follow Me</h3>
        <a href="#" class="btn btn-outline-primary me-2"><i class="fab fa-facebook-f"></i></a>
        <a href="#" class="btn btn-outline-primary me-2"><i class="fab fa-twitter"></i></a>
        <a href="#" class="btn btn-outline-primary me-2"><i class="fab fa-linkedin-in"></i></a>
        <a href="#" class="btn btn-outline-primary"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
    
    <div class="col-lg-6 animate__animated animate__fadeInRight">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          <h2 class="h4 mb-4">Send a Message</h2>
          
          <%= form_with(url: contact_path, method: :post, local: true, class: 'contact-form') do |f| %>
            <div class="mb-3">
              <%= f.label :name, 'Your Name', class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :email, 'Email Address', class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :phone, 'Phone Number', class: 'form-label' %>
              <%= f.telephone_field :phone, class: 'form-control', required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :subject, 'Subject', class: 'form-label' %>
              <%= f.text_field :subject, class: 'form-control', required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :message, 'Your Message', class: 'form-label' %>
              <%= f.text_area :message, class: 'form-control', rows: 5, required: true %>
            </div>
            
            <div class="text-end">
              <%= f.submit 'Send Message', class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="map-section rounded-3 overflow-hidden animate__animated animate__fadeInUp">
    <iframe 
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d19536.581183544167!2d77.02687916278964!3d11.078046825433017!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ba8f86b92e25e67%3A0x947ae971d41f3749!2sKalapatti%2C%20Tamil%20Nadu%20641048!5e1!3m2!1sen!2sin!4v1739027226462!5m2!1sen!2sin" 
      width="100%" 
      height="450" 
      style="border:0;" 
      allowfullscreen="" 
      loading="lazy">
    </iframe>
  </div>
</div>

<style>
.contact-form .form-control {
  padding: 0.8rem;
}

.contact-form .form-control:focus {
  box-shadow: none;
  border-color: #0d6efd;
}

.social-links .btn {
  width: 40px;
  height: 40px;
  padding: 0;
  line-height: 40px;
  text-align: center;
  border-radius: 50%;
}

.map-section {
  box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
}
</style>
